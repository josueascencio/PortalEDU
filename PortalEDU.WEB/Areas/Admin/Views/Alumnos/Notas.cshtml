@model PortalEDU.Models.ViewModels.AlumnoVM

@{
    ViewData["Title"] = "Notas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<h1>Registro de calificaciones</h1>
<hr />
<div class="row mx-5 mx-sm-5 border">
    <h5 class="offset-1">Calificaciones incluyen tareas, actividades, examenes y consideraciones actitudinales</h5>
    <hr />
    <div class="col-12 offset-4 mt-6">
        <br />

        <div class="form-group row">
            <div class="col-4">
                Primer Trimestre
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => model.calificaciones.PrimerTrimestre)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                Segundo Trimestre
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => model.calificaciones.SegundoTrimestre)
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                Tercer Trimestre
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => model.calificaciones.TercerTrimestre)
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                Cuarto Trimestre
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => model.calificaciones.CuartoTrimestre)
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                Promedio Final
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => model.calificaciones.Prom)
            </div>
        </div>

    </div>
</div>
