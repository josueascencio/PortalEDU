@model PortalEDU.Models.ViewModels.SalaVM
@using PortalEDU.Utilidades
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<h3 class="text-center">Crear un nuevo foro de seguimiento</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" value="@DateTime.Now.ToLocalTime()" asp-for="SalaEnVM.FechaPublicacion" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary=" ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label>Ingresa un titulo </label>
                </div>
                <div class="col-8">
                    <input asp-for="SalaEnVM.Titulo" id="titulo" class="form-control" />
                    <span asp-validation-for="SalaEnVM.Titulo" class="text-danger"> </span>
                </div>
            </div>



            @*// Aqui se despliega la lista de categoria, la relacion de 1 a muchos*@

            <div class="form-group row">
                <div class="col-4">
                    <label>Autor de la publicacion </label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.SalaEnVM.IdResponsable, Model.ListaResponsableItems, "-seleccione su nombre-", new
                    { @class = "form-control" })
                </div>
                <span asp-validation-for="SalaEnVM.IdResponsable" class="text-danger"> </span>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>Docente responsable</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.SalaEnVM.IdDocente, Model.ListaDocenteItem, "-seleccione un docente-", new
               { @class = "form-control", id = "titulo" })
                </div>
                <span asp-validation-for="SalaEnVM.IdDocente" class="text-danger"> </span>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>Escriba un resumen del tema de su interes </label>
                </div>
                <div class="col-8">
                    <textarea asp-for="SalaEnVM.Contenido" class="form-control" placeholder="Resumen"></textarea>
                    <span asp-validation-for="SalaEnVM.Contenido" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">

                    <div class="row">
                        <div class="col">
                            <button type="submit" onclick="return validateInput()" class="btn btn-success form-control">Crear</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark form-control">Regresar a lista</a>
                        </div>
                    </div>

                </div>
            </div>



        </div>
    </div>
</form>

<script>
    function validateInput() {
            if (document.getElementById("titulo").value == "") {
                swal("Error", "Por favor complete todos los campos", "error");
                return false;
            }
            return true;
        };


</script>