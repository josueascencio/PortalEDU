@model PortalEDU.Models.Ciclo
@using PortalEDU.Utilidades
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<br />
<br />
<h3 class="text-center">Crear un nuevo Ciclo Academico</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary=" ModelOnly" class="text-danger"></div>
        <input type="hidden" value="@DateTime.Now" asp-for="update" />

        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label> Escribe el año academico </label>
                </div>
                <div class="col-8">
                    <input type="number" asp-for="AnioAcademico" class="form-control" />
                    <span asp-validation-for="AnioAcademico" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver" />
                </div>


            </div>

        </div>
    </div>
</form>