@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Centros Educativos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Centro Educativo</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCentrosEducativos" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Tipo</th>
                <th>Director</th>
                <th>Año Academico</th>
                <th scope="col"></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/centroeducativo.js"></script>
}
