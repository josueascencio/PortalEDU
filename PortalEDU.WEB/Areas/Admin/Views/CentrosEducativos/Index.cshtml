@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>


    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css" />


</head>

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Centros Educativos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Centro Educativo</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCentrosEducativos" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" style="width:auto;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Tipo</th>
                <th>Director</th>
                <th>Año Academico</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
