@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Aulas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Crear Nueva Aula</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblAulas" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" style="width:auto;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Seccion</th>
                <th>Centro Escolar</th>

                <th scope="col"></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/aula.js"></script>
}
