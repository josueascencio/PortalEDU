@model PortalEDU.Models.ViewModels.ResponsableVM;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Create</h1>

<br />
<br />
<h3 class="text-center">Crear un nuevo Responsable</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary=" ModelOnly" class="text-danger"></div>
        <input type="hidden" value="@DateTime.Now" asp-for="responsable.update" />
        <div class="col-10 offset-1 mt-4">



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.Nombre"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.Nombre" class="form-control" />
                    <span asp-validation-for="responsable.Nombre" class="text-danger"> </span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.Apellido"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.Apellido" class="form-control" />
                    <span asp-validation-for="responsable.Apellido" class="text-danger"> </span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.Telefono"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.Telefono" class="form-control" />
                    <span asp-validation-for="responsable.Telefono" class="text-danger"> </span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.TelefonoTrabajo"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.TelefonoTrabajo" class="form-control" />
                    <span asp-validation-for="responsable.TelefonoTrabajo" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.Profesion"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.Profesion" class="form-control" />
                    <span asp-validation-for="responsable.Profesion" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="responsable.Direccion"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="responsable.Direccion" class="form-control" />
                    <span asp-validation-for="responsable.Direccion" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    Foto
                </div>
                <div class="col-8 card">
                    <img src="" width="100" height="100" id="imgFoto" class="align-self-center" />

                    <input type="file" asp-for="responsable.Foto" name="archivos" id="SubidaFotoAlumno" multiple class="form-control-file card bs-popover-top" onchange="seleccionarImagen()" accept="image/*" />
                    <span asp-validation-for="responsable.Foto" class="text-danger"> </span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">

                    <div class="row">
                        <div class="col">
                            <button type="submit" onclick="return validateInput()" class="btn btn-success form-control">Crear</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark form-control">Regresar a lista</a>
                        </div>
                    </div>

                    </div>
                </div>

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />


    <script>

        function seleccionarImagen() {
            var archivo = document.getElementById("SubidaFotoAlumno").files[0];
            var reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById("imgFoto").src = reader.result;
            }
            reader.readAsDataURL(archivo);
        };



        function validateInput() {
            if (document.getElementById("SubidaFotoAlumno").value == "") {
                swal("Error", "La foto es requerida", "error");
                return false;
            }
            return true;
        };





    </script>









}
