@model PortalEDU.Models.ViewModels.DocenteVM
@using PortalEDU.Models
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

</head>
<br />
<br />
<br />
<br />
<h3 class="text-center">Crear un nuevo docente</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary=" ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="docente.Id" />
        <input type="hidden" value="@DateTime.Now" asp-for="docente.update" />
        <div class="col-10 offset-1 mt-4">



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Nombre"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="docente.Nombre" class="form-control" />
                    <span asp-validation-for="docente.Nombre" class="text-danger"> </span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Apellido"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="docente.Apellido" class="form-control" />
                    <span asp-validation-for="docente.Apellido" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Telefono"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="docente.Telefono" class="form-control" />
                    <span asp-validation-for="docente.Telefono" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.FechaNacimiento"> </label>
                </div>
                <div class="col-8">
                    <input type="datetime" class="form-control" asp-for="docente.FechaNacimiento" />
                    <span asp-validation-for="docente.FechaNacimiento" class="text-danger"> </span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.GradoAcademico" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <select asp-for="docente.GradoAcademico" class="custom-select">
                        <option value="">-sleccione grado academico-</option>
                        <option value="Basico">Basico</option>
                        <option value="Bachillerato">Bachillerato</option>
                        <option value="Tecnico">Tecnico</option>
                        <option value="Universitario">Universitario</option>
                        <option value="Maestria">Maestria</option>
                        <option value="Doctorado">Doctorado</option>
                    </select>
                    <span asp-validation-for="docente.GradoAcademico" class="text-danger"> </span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Direccion"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="docente.Direccion" class="form-control" />
                    <span asp-validation-for="docente.Direccion" class="text-danger"> </span>
                </div>
            </div>





            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Sexo" class="control-lable"></label>
                </div>
                <div class="col-8">
                    <select asp-for="docente.Sexo" class="custom-select">
                        <option value="">-sexo-</option>
                        <option value="Femenino">Femenino</option>
                        <option value="Masculino">Masculino</option>
                    </select>
                    <span asp-validation-for="docente.Sexo" class="text-danger"> </span>
                </div>
            </div>




            @*// Aqui se despliega la lista de categoria, la relacion de 1 a muchos*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.IdCentroEducativo"> </label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.docente.IdCentroEducativo, Model.ListaCentroEducativo, "-seleccione centro educativo asociado-", new
                    { @class = "form-control" })
                </div>
                <span asp-validation-for="docente.IdCentroEducativo" class="text-danger"> </span>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="docente.Foto"> </label>
                </div>
                <div class="col-8 card">
                    <img src="@Model.docente.Foto" width="100" height="100" id="imgFoto" class="align-self-center" />
                    <input type="file" asp-for="docente.Foto" name="archivos" id="SubidaFoto" class="form-control-file card bs-popover-top" onchange="seleccionarImagen()" accept="image/*" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-info form-control" asp-route-id="@Model.docente.Id}">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark form-control">Volver a la vista</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

