@model PortalEDU.Models.Curso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<h3 class="text-center">Crear un curso</h3>
<hr />
<form asp-action="Create" method="post">
    <div class="row px-2 mx-2 border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" value="@DateTime.Now" asp-for="Update" />
        <br />
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Descripcion" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FechaInicio" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="datetime-local" id="input_doc" asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FechaFinal" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="datetime-local" id="input_doc" asp-for="FechaFinal" class="form-control" />
                    <span asp-validation-for="FechaFinal" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group form-check row">
                <div class="col-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>Aula</label>
                </div>
                <div class="col-8">
                    <select asp-for="IdAula" class="form-control" asp-items="ViewBag.IdAula"></select>
                </div>
            </div>

            

            <div class="form-group row">
                <div class="col-8 offset-4">

                    <div class="row">
                        <div class="col">
                            <button type="submit" onclick="return validateInput()" class="btn btn-success form-control">Crear</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark form-control">Regresar a lista</a>
                        </div>
                    </div>

                </div>
            </div>



        </div>
    </div>
</form>

<script>

        function seleccionarImagen() {
            var archivo = document.getElementById("SubidaFotoAlumno").files[0];
            var reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById("imgFoto").src = reader.result;
            }
            reader.readAsDataURL(archivo);
        };



        function validateInput() {
            if (document.getElementById("input_doc").value == "") {
                swal("Error", "Por favor complete todos los campos", "error");
                return false;
            }
            return true;
        };





</script>