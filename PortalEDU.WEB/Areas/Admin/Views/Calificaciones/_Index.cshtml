@model IEnumerable<PortalEDU.Models.Calificaciones>
@using PortalEDU.Models.ViewModels 
<head>
    @*Cuando no hay registros en las celdas*@
    <style>
        table td:empty::before {
            content: "Sin registros";
            color: brown;
        }
    </style>

</head>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Alumno.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrimerTrimestre) 
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SegundoTrimestre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TercerTrimestre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CuartoTrimestre)
    </td>
