        <a eval="editCourse($this, data)" asp-action="Edit" asp-route-id="@item.Calificaciones.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Calificaciones.Id">Details</a> |
        <a eval="deleteCourse($this, data)" asp-action="Delete" asp-route-id="@item.Calificaciones.Id">Delete</a>
    </td>*@
</tr>}