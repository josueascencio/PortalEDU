@*@using PortalEDU.Models*@

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css" />


    @*Cuando no hay registros en las celdas*@
    <style>
        table td:empty::before {
            content: "Sin registros";
            color: brown;
        }
    </style>

</head>
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Registro de calificaciones</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"> </i> Nuevo Alumno </a>
        </div>
    </div>

    @ViewBag.MensajeError

    <br />

    <br />

    <table id="tblCalificaciones" class="table table-striped table-bordered table-hover" style=" width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Alumno</th>
                <th>Primer Trimestre</th>
                @*<th>Apellido</th>*@
                <th>Segundo Trimestre</th>
                <th>Tercer Trimestre</th>
                <th>Cuarto Trimestr</th>
                <th>Promedio</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>



@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>
    <script src="~/js/calificaciones.js"></script>
}

